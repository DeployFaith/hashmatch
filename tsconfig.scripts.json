{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "noEmit": false,
    "outDir": "dist-scripts",
    "rootDir": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "scripts/**/*.ts",
    "src/cli/**/*.ts",
    "src/core/**/*.ts",
    "src/contract/**/*.ts",
    "src/tournament/**/*.ts",
    "src/scenarios/**/*.ts"
  ]
}
